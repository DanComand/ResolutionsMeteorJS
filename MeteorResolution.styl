ul {
  margin: 0;
  padding: 0;
  background: white;
}
 
.delete {
  /*float: right;*/
  font-weight: bold;
  background: #DE4F4F;
  color: #FFF;
  font-size: 1em;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
}
 
li {
  position: relative;
  list-style: none;
  padding: 20px 15px;
  border-bottom: #eee solid 1px;
}
 
li .text {
  margin-left: 10px;
}
 
li.checked {
  color: #888;
}
 
li.checked .text {
  text-decoration: line-through;
}

.bookmark-image {
  width: 50%;
  height: 50%;
}

.bookmark-container {
  margin: 0 auto;
  border: 2px solid black;
}

.bookmark {
  margin: 0 auto;
}

.submit {
  font-weight: bold;
  background: #DE4F4F;
  color: #FFF;
  font-size: 1em;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
}

#card {
  border: 2px solid green;
  width: 50%;
}

