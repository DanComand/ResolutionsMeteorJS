@import 'nib'

html 
  box-sizing border-box

 
*, *:before, *:after {
  box-sizing: inherit;
}
 
 
body 
  font-family sans-serif
  font-size 16px
  background #333

 
.container {
  max-width: 900px;
  margin: 0 auto;
  min-height: 100%;
  background: white;
  box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26);
}
 
header {
  /*padding: 20px 15px 15px 15px;*/
  position: relative;
  /*border: 2px solid black;*/
  /*background-color: red;*/
  margin-bottom: 20px;
  font-family: 'Roboto', sans-serif;
}
 
h1 {
  font-size: 2em;
  /*margin: 0;*/
  margin: 10px;
  display: inline-block;
  margin-right: 1em;
}
 
.new-resolution input[type="text"] {
  padding: 10px 0;
  background: transparent;
  border: none;
  width: 50%;
  font-size: 1em;
  border-bottom: 1px solid rgba(0,0,0,0.3);
  text-align: center;
}

.new-resolution input[type="submit"] {
  font-weight: bold;
  background: #3498db
  color: #FFF;
  font-size: 1em;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  margin-top: 20px;
}

.comments-container{
  border: 2px solid black;
}

.comment{
text-align: center;
/*border: 2px solid black;*/
font-family: 'Roboto', sans-serif;

}

.login-buttons {
  /*background-color: red;*/
  float: right;
  text-transform: capitalize;
  margin: 20px;
}

 
.new-resolution input:focus{
  outline: 0;
}

.new-resolution{
  /*border: 2px solid black;*/
